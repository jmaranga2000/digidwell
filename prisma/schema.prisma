generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
}

model Service {
  id          String   @id @default(cuid())
  title       String
  description String
  price       String
  imageUrl    String?           // optional URL to the service image / template
  createdAt   DateTime @default(now())
  createdBy   User?    @relation(fields: [createdById], references: [id])
  createdById String?
  bookings    Booking[]
  updatedAt   DateTime @updatedAt
}

model Booking {
  id                      String   @id @default(cuid())
  serviceId               String
  userId                  String
  status                  String   @default("PENDING") // PENDING, PAID, CANCELLED
  mpesaCheckoutRequestId  String?  // To link M-Pesa STK
  phone                   String?
  amountPaid              Float?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  service Service @relation(fields: [serviceId], references: [id])
  user    User    @relation(fields: [userId], references: [id])
}


model Order {
  id          String   @id @default(cuid())
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
  serviceId   String?
  amount      String
  status      String   @default("Pending")
  createdAt   DateTime @default(now())
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  password   String
  name       String?
  role       String   @default("customer") // "customer" | "admin"
  createdAt  DateTime @default(now())
  bookings   Booking[]
  orders     Order[]
  services   Service[] // <-- back relation
}

model Contact {
  id          String   @id @default(cuid())
  name        String
  email       String
  message     String
  attachment  String?  // store filename or URL
  createdAt   DateTime @default(now())
}

model Payment {
  id              String   @id @default(cuid())
  phone           String
  amount          Int
  merchantRequestId String?
  checkoutRequestId  String?
  resultCode      String?
  resultDesc      String?
  status          String   @default("PENDING")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}


enum Role {
  ADMIN
  CUSTOMER
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}
